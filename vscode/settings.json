{
  // Basic Settings
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Visual Studio Dark",
  "editor.renderControlCharacters": true,
  "files.trimTrailingWhitespace": true,
  "editor.minimap.enabled": false,

  // Emmet
  //"emmet.triggerExpansionOnTab": true,
  //"emmet.extensionsPath": "C:\\scripts\\emmet",

  // PowerShell
  "files.defaultLanguage": "powershell",
  "powershell.scriptAnalysis.enable": true,
  "powershell.scriptAnalysis.settingsPath": "ScriptAnalyzerSettings.psd1",
  "powershell.enableProfileLoading": true,
  "powershell.startAutomatically": true,
  "powershell.codeFormatting.ignoreOneLineBlock": false,
  "powershell.codeFormatting.openBraceOnSameLine": true,
  "files.associations": {
    "*.ps1xml": "xml"
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.autoClosingBrackets": "always",
  "editor.tabCompletion": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.codeFormatting.preset": "OTBS",
  "editor.fontSize": 14,
  "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "gitlens.gitCommands.closeOnFocusOut": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "push:menu"
  ],
  "vsicons.dontShowNewVersionMessage": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.integratedConsole.suppressStartupBanner": true,
  "powershell.powerShellDefaultVersion": "PowerShell (x64)",
  "editor.formatOnSave": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "azureResourceManagerTools.parameterFiles": {
    "c:\\users\\srackham\\onedrive - computer concepts limited\\git\\leaven\\bootstrap\\budget-alert-parameters.dev.json": "budget-alert-parameters.dev.parameters.json",
    "c:\\users\\srackham\\onedrive - computer concepts limited\\git\\leaven\\bootstrap\\arm-budget-alert.json": "budget-alert-parameters.dev.parameters.json"
  },
  "workbench.productIconTheme": "material-product-icons",
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": "{{put-password-here}}"
    }
  ],
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "telemetry.telemetryLevel": "off",
  "cSpell.userWords": ["organisation", "utilised"],
  "explorer.confirmDragAndDrop": false,
  "redhat.telemetry.enabled": false,
  "cSpell.language": "en-GB",
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "open",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "powershell.pester.useLegacyCodeLens": false,
  "workbench.panel.defaultLocation": "right",
  "terminal.explorerKind": "external",
  "powershell.buttons.showPanelMovementButtons": true,
  "powershell.pester.outputVerbosity": "Detailed",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.sideBar.location": "right",
  "git.confirmSync": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeLensFontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true
  "editor.fontWeight": "normal",
  "editor.fontFamily": "FiraCode Nerd Font"

}
